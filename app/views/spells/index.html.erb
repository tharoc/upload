<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="position-sticky sticky-form">
                <h1>Spells</h1>
                <hr>
                <%= simple_form_for :search, url: root_path, method: "GET", remote: true do |f| %>
                <%= f.input :schools, label: "School",  collection: $schools, as: :check_boxes ,onClick: "test"%>
                <%= f.input :subschools, label: "Subschool", collection: $subschools, as: :check_boxes %>
                <%= f.input :descriptors, label: "Descriptor", collection: $descriptors, as: :check_boxes %>
                <%= f.submit "Search", class: "btn btn-primary" %>
                <%= link_to "Reset", root_path  %>
                <% end %>
            </div>
        </div>
        <div class="col-xs-12 col-sm-8">
            <div id="spells">
                <%= render 'spell', spells: @spells %>
            </div>
        </div>
    </div>
</div>
